[colors]

; black + gray
color0 = ${xrdb:color0:#000000}
color8 = ${xrdb:color8:#000000}

; red
color1 = ${xrdb:color1:#000000}
color9 = ${xrdb:color9:#000000}

; green
color2 = ${xrdb:color2:#000000}
color10 = ${xrdb:color10:#000000}

; yellow
color3 = ${xrdb:color3:#000000}
color11 = ${xrdb:color11:#000000}

; blue
color4 = ${xrdb:color4:#000000}
color12 = ${xrdb:color12:#000000}

; purple
color5 = ${xrdb:color5:#000000}
color13 = ${xrdb:color13:#000000}

; aqua (cyan)
color6 = ${xrdb:color6:#000000}
color14 = ${xrdb:color14:#000000}

; gray + white
color7 = ${xrdb:color7:#000000}
color15 = ${xrdb:color15:#000000}

bg0_s = #32302f
fg = {self.color15}
fg3 = #bdae93

background = ${self.color0} 
background-alt = ${self.bg0_s}
foreground = ${self.color15}
foreground-alt = ${self.fg3}
primary = ${self.color15}
secondary = ${self.color5}
alert = ${self.color9}

wlanunderline = ${self.color5}
batteryunderline = ${self.color6}
dateunderline = ${self.color12}

[bar/example]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 25
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = {$colors.color1}

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Noto Sans Mono:pixelsize=14;0
font-1 = Inconsolata:pixelsize=14;0
font-2 = Inconsolata:pixelsize=14;0

modules-left = i3
modules-right = volume backlight wlan battery date

tray-position = right
tray-padding = 0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]

type = internal/i3
index-sort = true
pin-workspaces = true
strip-wsnumbers = true
enable-click = true
enable-scroll = true
wrapping-scroll = true
reverse-scoll = false
fuzzy-match = true

workspace-label = %name%
label-focused = ${self.workspace-label}
label-unfocused = ${self.workspace-label}
label-urgent = ${self.workspace-label}
label-visible = ${self.workspace-label}

padding = 1
label-mode-padding = ${self.padding}
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused-background = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = ${self.padding}

label-unfocused-padding = ${self.padding}

label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.padding}

label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.padding}

[module/backlight]
type = internal/xbacklight
card = intel_backlight
format = <bar>

bar-width = 10
bar-indicator = |
bar-fill = -
bar-empty = -

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.wlanunderline}
label-connected = %essid%

format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = no wifi
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%a, %Y.%m.%d"
time = "%H.%M"

format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.dateunderline}

label = %date% %time%

[module/volume]
type = internal/alsa

format-volume = <bar-volume>
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.foreground-alt}
label-muted = muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.color10}
bar-volume-foreground-1 = ${colors.color10}
bar-volume-foreground-2 = ${colors.color10}
bar-volume-foreground-3 = ${colors.color10}
bar-volume-foreground-4 = ${colors.color10}
bar-volume-foreground-5 = ${colors.color9}
bar-volume-foreground-6 = ${colors.color7}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = -
bar-volume-fill-font = 2
bar-volume-empty = -
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = C <label-charging>
format-charging-underline = ${colors.batteryunderline}

format-discharging = <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = "F "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
