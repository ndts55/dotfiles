# xf86
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 2%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 2%-
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym XF86Calculator exec speedcrunch

bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

# Shift
bindsym $mod+Shift+comma move workspace prev
bindsym $mod+Shift+period move workspace next

# Control
bindsym $mod+Control+Print exec maim -s ~/Pictures/$(date +%s).png

# Shift+Control
bindsym $mod+Shift+Control+i [urgent="latest"] kill
bindsym $mod+Shift+Control+l exec ~/.config/i3/lock.sh
bindsym $mod+Shift+Control+p mode $power_mode

# just mod
bindsym $mod+e exec nemo
bindsym $mod+i [urgent="latest"] focus
bindsym $mod+n exec --no-startup-id numlockx toggle

bindsym $mod+comma workspace prev
bindsym $mod+period workspace next

bindsym $mod+Print exec maim -s | xclip -selection clipboard -t image/png

# mouse
bindsym --whole-window $mod+button4 workspace prev
bindsym --whole-window $mod+button5 workspace next

# custom modes
set $power_mode "(h)ibernate, (p)oweroff, (q)uit, (r)eboot"
mode $power_mode {
  bindsym p exec systemctl poweroff
  bindsym q exec --no-startup-id i3-msg exit, mode "default"
  bindsym r exec systemctl reboot
  bindsym h exec systemctl hibernate, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# class assignments
assign [class="Enpass"] "99:enpass"
for_window [class="Spotify"] move workspace "98:music"
# assign [class="Spotify"] "98:music"
assign [class="Transmission"] "97:download"
assign [class="Deluge"] "97:download"
assign [class="Steam"] "96:play"

for_window [class=".*"] border pixel 3

