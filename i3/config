# custom modes
set $roman_empire_mode "(s)uspend, (p)oweroff, (q)uit, (r)eboot"
mode $roman_empire_mode {
  bindsym p exec systemctl poweroff
  bindsym r exec systemctl reboot
  bindsym q exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec systemctl suspend, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
set $redshift_mode "(s)tart, (k)ill"
mode $redshift_mode {
  bindsym s exec redshift -l 49.8:8.6, mode "default"
  bindsym k exec pkill redshift, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

